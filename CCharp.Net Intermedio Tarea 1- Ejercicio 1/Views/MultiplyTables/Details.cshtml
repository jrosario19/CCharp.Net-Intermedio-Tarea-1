@model List<MultiplyTable>

@{


    ViewBag.Title = "Tabla de multiplicar";
}
    <div style="width:400px">
        @if (@Model.Any())
        {
            <h3>Tabla de multiplicar del @Model[0].Multiplying</h3>
            <table class="table table-striped table-bordered table-sm">
                <thead class="text-center">
                    <tr>
                        <th style="width:200px"> Multiplicador </th>
                        <th style="width:200px">  </th>
                        <th style="width:200px"> Multiplicando </th>
                        <th style="width:200px">  </th>
                        <th style="width:200px"> Resultado </th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@Model[i].Multiplyer</td>
                            <td>X</td>
                            <td>@Model[i].Multiplying</td>
                            <td>=</td>
                            <td>@Model[i].Result</td>
                        </tr>

                    }
                </tbody>

            </table>
        }
        else
        {
            <h3>No hay datos registrados</h3>
        }

    </div>
    <p> <a asp-controller="MultiplyTables" asp-action="GetMultiplyTable" class="btn btn-primary">Volver a consultar</a>.</p>



